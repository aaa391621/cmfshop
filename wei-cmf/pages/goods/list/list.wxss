/* pages/goods/list/list.wxss */
/* 显示与隐藏 */
.show {
  display: block;
}

.hidden {
  display: none;
}

/*商品列表*/
.goodsList {
  margin-top: 14rpx;
  z-index: 1;
}

/*销量与好评*/
.goods-score {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}

.goods-score text {
  display: block;
  width: 100px;
  font-size: 12px;
  color: #999;
  margin: 8px 4px;
}

/*整体列表*/
.carts-list {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  margin-bottom: 80rpx;
}

/*每行单元格*/
.carts-item {
  display: flex;
  flex-direction: row;
  height: 170rpx;
  /*width属性解决标题文字太短而缩略图偏移*/
  width: 100%;
  border-bottom: 3rpx solid #e3e3e3;
  padding: 30rpx 0;
}

/*左部图片*/
.carts-image {
  width: 150rpx;
  height: 150rpx;
}

/*右部描述*/
.carts-text {
  margin-left: 20rpx;
  width: 550rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/*右上部分标题*/
.carts-title {
  font-size: 30rpx;
  color: #444;
  height: 80rpx;
  line-height: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/*右下部分价格与数量*/
.carts-subtitle {
  font-size: 25rpx;
  color: darkgray;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

/*价格*/
.carts-price {
  color: #f60;
  font-size: 29rpx;
  line-height: 22px;
  margin-top: 15rpx;
}

.view-empty {
  width: 100%;
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.view-empty text {
  font-size: 32rpx;
  color: #444;
}