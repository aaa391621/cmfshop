/**app.wxss**/
@import "/style/weui.wxss";
@import "/wxParse/wxParse.wxss";
@import "/cmf/index.wxss";

view {
  font-family: -apple-system, Helvetica Neue, Roboto, Arial, PingFang SC, sans-serif;
  font-weight: 300;
  color: #000;
}

page {
  background: #fff; /*F8F8F8*/
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0;
  box-sizing: border-box;
}

.form-required {
  color: red;
}

.logo-wrap {
  text-align: center;
  line-height: 0;
  margin-top: 50px;
  margin-bottom: 20px;
}

.logo-wrap .logo {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.logo-wrap .version-text {
  color: #999;
  line-height: 18px;
  font-size: 14px;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  margin-top: 30px;
  padding-left: 30px;
  padding-right: 30px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 18px;
  font-weight: 400;
  line-height: 1.2;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.weui-article .wxParse {
  margin: 0;
}
